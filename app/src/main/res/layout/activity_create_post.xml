<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePost"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_MosaicBlue"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck"
            android:onClick="BacktoMyPosts"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/createPost"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="32dp"
            android:text="Description"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/description_CP"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="start"
            android:padding="5dp"
            android:background="@drawable/descript_rounded"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/progressText_CP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="end"/>

        <ImageView
            android:id="@+id/createPostImg_CP"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/ic_image"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <ProgressBar
            android:id="@+id/progressBar_CP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/createPost_CP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/createPost"
            android:background="@color/orange"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </LinearLayout>


</LinearLayout>